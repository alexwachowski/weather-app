    <div style="border: none;" class="row">
        <div style="border: none;" class="styled-container"><img/>
            <div class="styled-text one">
                <% if (typeof temp !== 'undefined') { %>
                    Temp: <%= temp %> °F
                <% } else { %>
                    Temp
                <% } %>
            </div>
        </div>
        <div class="styled-container"><img/>
            <div class="styled-text two">
                <% if (typeof feels_like !== 'undefined') { %>
                    Feels Like: <%= feels_like %> °F
                <% } else { %>
                    Feels Like
                <% } %>
            </div>
        </div>
        <div class="styled-container"><img/>
            <div class="styled-text three">
                <% if (typeof Humid !== 'undefined') { %>
                    Humidity: <%= Humid %> %
                <% } else { %>
                    Humidity
                <% } %>
            </div>
        </div>
        <div class="styled-container"><img/>
            <div class="styled-text four">
                <% if (typeof speed !== 'undefined') { %>
                    Wind Speed: <%= speed %> mph
                <% } else { %>
                    Wind Speed
                <% } %>
            </div>
        </div>
