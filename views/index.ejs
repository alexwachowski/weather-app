<body>
    <form action="/search" method="post">
        <input type="text" name="city" placeholder="City">
        <input type="text" name="state" placeholder="State/country">
        <button type="submit">Search</button>
    </form>
    <div style="width: 1218px; height: 323px; position: relative; border: none; margin-top: 10px; text-align: center;" class="main card">
        
        <div style=
            "left: 578px;
            top: 70px;
            position: absolute;
            mix-blend-mode: overlay;
            color: white;
            font-size: 21px;
            font-family: Montserrat;
            font-weight: 600;
            word-wrap: break-word;"
            >
            Today
        </div>

        <div style=
            "width: 300px;
            height: 36px;
            left: 450px;
            top: 17px;
            position: absolute;
            mix-blend-mode: overlay;
            color: white;
            font-size: 34px;
            font-family: Montserrat;
            font-weight: 600;
            word-wrap: break-word;"
            >
            <% if (typeof City !== 'undefined' && typeof State !== 'undefined') { %>
                <%= City %>, <%= State %>
            <% } else { %>
                City, State
            <% } %>
